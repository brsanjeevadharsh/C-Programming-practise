#include <stdio.h>
int main()
{
    char a[100];
    int l;
    int flag;
    printf("Enter the name to check: ");
    scanf("%[^\n]s",a);
    for(int i=0;a[i]!='\0';i++)
    {
        l++;
    }
    printf("The length of the word is %d\n",l);
    for(int i=0,j=l-1;i<j;i++,j--)
    {
        if(a[i]!=a[j])
        {
            flag=1;
        }
    }
    if(flag==1)
    {
        printf("The given number is not palindrome");
    }
    else
    {
        printf("The given number is palindrome number");
    }
}
