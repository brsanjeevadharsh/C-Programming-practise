#include <stdio.h>
int main()
{
int n;
printf("Enter the no of elements:");
scanf("%d",&n);
int a[n];
for(int i=0;i<n;i++)
{
    scanf("%d",&a[i]);
}

for(int i=0;i<n;i++)
{
    int counte;
    if(a[i]%2==0)
    {
      printf("Even Numbers: %d\n",a[i]);
      counte++;
    }
    printf("Number of even numbers %d\n",counte);
}
for(int i=0;i<n;i++)
{
    int counto;
    if(a[i]%2!=0)
    {
      printf("Odd Numbers: %d\n",a[i]);
      counto++;
    }
    printf("Number of odd numbers %d\n",counto);
}  

return 0;
}
